<!DOCTYPE html>
<!--  Content (배너이미지) 부분 -->
<div><img src="/images/banner1.png" class="img-fluid" alt="배너이미지" width="100%"></div>

<!-- 컨텐츠(예, 쇼핑몰일경우 판매제품리스트)헤더부분 -->
<div class="container-fluid" style="border: solid 20px white; border-radius: 1px">
    <div class="panel panel-default">
        <div class="panel-heading">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">쇼핑몰</a></li>
                    <li class="breadcrumb-item"><%= category %> </a></li>
                </ol>
            </nav>
        </div>

        <hr>
        <div class="container">
            <div class="row align-items-start">
                <% prodata.forEach(function (item, index) { %>
                    <div class="col-4">
                        <div class="card border-primary mb-3" style="max-width: 18rem; max-height: 30rem;">
                            <div class="card-header bg-transparent border-primary"><strong><%= item.pname %> </strong>
                                <small> [<%= item.maker %>] </small></div>
                            <div class="card-body text-primary">
                                <div><img class="img-fluid" style="width: 250px; height: 180px;" src=<%= item.pic %>></div>
                                <p class="card-text"><%= item.pdesc %>
                            </div>
                            <div class="card-footer bg-transparent">
                                <s><%= item.price %>원</s>
                                <span><%= item.price * (1 - (item.dcrate / 100)) %>원</span>
                                <span><%= item.modelnum %></span>
                            </div>
                            <div class="form-group card-footer bg-transparent">
                                <form action="/order" method="post">
                                    <input class="form-control" type="number" min="1" max="<%= item.amount %>"
                                           name="amount" id="amount" value="1">
                                    <input type="hidden" id="modelnum" name="modelnum" value="<%= item.modelnum %>">
                                    <input type="hidden" id="itemid" name="itemid" value="<%= item.itemid %>">
                                    <div class="row">
                                        <div class="text-secondary w-100 text-right mr-3"><%= item.amount %>개 구매 가능</div>
                                    </div>
                                    <div class="row text-center">
                                        <div class="col">
                                        <button type=submit class="btn btn-primary m-1">구매하기</button>
                                        <button type=button class="btn btn-warning m-1">구매후기</button>
                                        </div>

                                    </div>

                                </form>
                            </div>
                        </div>

                    </div>
                <% }); %>
            </div>
        </div>

        <p>
            <nav aria-label="...">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                    </li>
                    <li class="page-item active" aria-current="page">
                        <a class="page-link" href="#">1 <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
